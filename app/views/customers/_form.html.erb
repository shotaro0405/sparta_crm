<%= form_for @customer do |f| %>
    <div class="form-group">
      <%= f.label :family_name, "姓" %>
      <%= f.text_field :family_name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :given_name, "名" %>
      <%= f.text_field :given_name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :company_id, "会社名" %><br>
      <%= f.collection_select(:company_id, Company.all, :id, :name, class: "form-control") %>
    </div>

    <div class="form-group">
      <%= f.label :email, "電子メール" %>
      <%= f.text_field :email, class: "form-control" %>
    </div>

    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>
