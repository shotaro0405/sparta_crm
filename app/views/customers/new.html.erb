<div class="row">
  <div class="col-lg-12">
    <h1>新規登録</h1>
      <% if @customer.errors.any? %>
      <div class="alert alert-danger">
      <p><b><%= @customer.errors.count %>件のエラーがあります</b></p>
      <ul>
      <% @customer.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
    <%= render 'form' %>
  </div>
</div>

